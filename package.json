{
  "name": "glass-browser",
  "version": "1.0.0",
  "description": "Um navegador moderno com efeitos glassmorphism",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "browser",
    "electron",
    "glassmorphism",
    "modern"
  ],
  "author": "Glass Browser Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.glassbrowser.app",
    "productName": "Glass Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "homepage": "https://github.com/glassbrowser/glass-browser",
  "repository": {
    "type": "git",
    "url": "https://github.com/glassbrowser/glass-browser.git"
  },
  "bugs": {
    "url": "https://github.com/glassbrowser/glass-browser/issues"
  }
}
